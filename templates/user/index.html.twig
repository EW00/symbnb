{% extends 'base.html.twig' %}

{% block body %}

<section class="account">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-md-2 col-sm-4 text-center">
                <img src="{{user.picture}}" alt="Avatar de {{user.firstName}}" class="avatar avatar-large mb-2">
                <br>
                <span class="badge badge-primary">{{user.ads|length}} annonces</span>
            </div>
            <div class="col-md-10 col-sm-8">
                <h1>{{user.firstName}} {{user.lastName}}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{path('account_bookings')}}" class="btn btn-success mb-2 mr-2">Mes r√©servations</a>
                        <a href="{{path('account_profile')}}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                        <a href="{{path('account_password_update')}}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            </div>
        </div>
        {{user.description | raw}}
        <hr>
        {% if user == app.user %}
            <h2>Mes annonces</h2>
        {% else %}
            <h2>Les annonces de {{user.firstName}}</h2>
        {% endif %}
        
        {% if user.ads|length > 0 %}
        <div class="row">
            {% for ad in user.ads %}
                {% include 'partials/ad.html.twig' %}
            {% endfor %}
        </div>
        {% else %}
            <div class="alert alert-warning clearfix">
                <h4 class="alert-heading">Aucune annonce üò¢</h4>
                {% if user == app.user %}
                    <p>Vous n'avez pas encore post√© d'annonce !</p>
                    <a href="{{path("ads_create")}}" class="btn btn-success float-right">Je cr√©√© ma premi√®re annonce !</a>
                {% else %}
                    <p><strong>{{user.firstName}}</strong> n'a pas encore d'annonce sur le site !</p>
                {% endif %}
            </div>
        {% endif %}
    </div>
</section>

{% endblock %}
