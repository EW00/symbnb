{% extends 'base.html.twig' %}

{% block body %}
    <section class="ad-details">
        <div class="ad-title" style="background-image: url({{ad.coverImage}})">
            <div class="container">
                <h1>{{ad.title}}</h1>
                <p>{{ad.introduction}}</p>
                <p class="h2"><strong>{{ad.rooms}} chambres</strong> pour <strong>{{ad.price}}&euro; par nuit !</strong></p>
                <a href="#" class="btn btn-primary btn-lg">Réserver !</a>
            </div>
        </div>
        <div class="container">
            
            <div class="row">
                <div class="col-md-8 mb-3">
                    {{ad.content | raw}}

                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            {% for image in ad.images %}
                                <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" {% if loop.index == 1 %}class="active"{% endif %}></li>
                            {% endfor %}
                        </ol>
                        <div class="carousel-inner">
                            {% for image in ad.images %}
                            <div class="carousel-item {% if loop.index == 1 %} active {% endif %}">
                                <img class="d-block w-100" src="{{image}}" alt="Image {{loop.index}}">
                            </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        </div>
                </div>
                <div class="col-md-4">
                    {% if not ad.owner %}
                        <h3>Pas de propriétaire (bizarre non ?)</h3>
                    {% else %}
                        <div class="row align-items-center mb-3">
                            <div class="col-4 text-center">
                                <img class="avatar avatar-medium" src="{{ad.owner.picture}}" alt="Photo de {{ad.owner.firstName}}">
                            </div>
                            <div class="col">
                                <h3>{{ad.owner.firstName}} {{ad.owner.lastName}}</h3>
                                <span class="badge badge-primary">{{ad.owner.ads | length }} annonces</span>
                            </div>
                        </div>
                        {{ad.owner.description | raw}}
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}


{% endblock %}