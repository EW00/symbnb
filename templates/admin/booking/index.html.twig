{% extends 'admin/base.html.twig' %}

{% block body %}
<section class="admin-bookings">
    <div class="container-fluid">
        <h1 class="my-3">Gestion des réservations</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Annonce</th>
                    <th>Voyageur</th>
                    <th>Arrivée</th>
                    <th>Départ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td>{{booking.id}}</td>
                        <td>{{booking.ad.title}}</td>
                        <td>{{booking.booker.firstName}}</td>
                        <td>{{booking.startDate|date('d/m/Y')}}</td>
                        <td>{{booking.endDate|date('d/m/Y')}}</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i></a>
                            <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}