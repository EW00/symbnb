{% extends 'admin/base.html.twig' %}

{% block body %}
<section class="admin-users">
    <div class="container-fluid">
        <h1 class="my-3">Gestion des utilisateurs</h1>
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th></th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Annonces</th>
                    <th>Commentaires</th>
                    <th>Réservations</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>
                            <img src="{{user.picture}}" class="avatar avatar-micro">
                        </td>
                        <td>{{user.firstName}}</td>
                        <td>{{user.lastName}}</td>
                        <td>{{user.email}}</td>
                        <td class="text-center"><span class="badge badge-dark">{{user.ads|length}}</span></td>
                        <td class="text-center"><span class="badge badge-dark">{{user.comments|length}}</span></td>
                        <td class="text-center"><span class="badge badge-dark">{{user.bookings|length}}</span></td>
                        <td></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}