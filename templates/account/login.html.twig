{% extends 'base.html.twig' %}

{% block body %}

<section class="login-form">
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1>Connectez vous !</h1>
                    <form action="{{ path('account_check') }}" method="post">
                        <div class="form-group">
                            <label for="login">Adresse email</label>
                            <input type="text" name="_username" id="login" class="form-control" placeholder="Adresse email ..." required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe ..." required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion !</button>
                            <a href="{{path('account_registration')}}" class="btn btn-link">Je n'ai pas encore de compte !</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}